<%= form_for @user, url: '/users' do |f| %>
  <label><h4>Sign up</h4></label>
  <%= f.text_field :email, placeholder: "Email" %>
  <%= f.text_field :name, placeholder: "Full Name" %>
  <%= f.password_field :password, placeholder: "Password" %>
  <%= f.password_field :password_confirmation, placeholder: "Re-type password" %>
  <label class="checkbox">
  	<%= check_box("page", "remember_me", { checked: true }, "yes", "no") %>
  	<small>Keep me logged in</small>  	
  </label>
  <%= f.submit "Sign up", class: "btn btn-warning" %>
<% end %>