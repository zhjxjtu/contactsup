<% if flash.any? %>
  <% flash.each do |key, value| %>
    <div id="form_flash" class="flash-message alert alert-<%= key %>">
      <button id="message_flash_close" class="close" type="button">
      	<small>&times;</small>
      </button>
      <small><%= value %></small>
    </div>
  <% end %>
<% end %>