  <div class="container">
    <div class="controls">
      <hr>
    </div>
    <div class="phrases_wrapper">
      <div class="phrase">
        <div class="row">
          <div class="span10 offset1">
            <p class="testimony">
              ContactsUp provide you unmatchable experience of business contacts management
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

